{
 "root": true,
 "extends": ["airbnb-base"],
 "env": {
  "node": true,
  "es6": true
 },
 "parser": "babel-eslint",
 "rules": {
  "one-var": 0,
  "one-var-declaration-per-line": 0,
  "object-curly-newline": "off",
  "new-cap": 0,
  "consistent-return": 0,
  "no-param-reassign": 0,
  "comma-dangle": 0,
  "curly": ["error", "multi-line"],
  "import/no-unresolved": [
   2,
   {
    "commonjs": true
   }
  ],
  "no-shadow": [
   "error",
   {
    "allow": ["req", "res", "err"]
   }
  ],
  "function-paren-newline": ["error", "never"],
  "indent": [1, 1]
 },
 "parserOptions": {
  "ecmaVersion": 2017,
  "sourceType": "module"
 }
}
